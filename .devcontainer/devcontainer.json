{
    "name": "Python",
    "dockerFile": "Dockerfile",
    "remoteUser": "vscode",
    "postCreateCommand": "f=requirements.txt; if [ -f $f ]; then pip3 install -r $f; fi; workspaceFolder=$workspaceFolder/src",
    "settings": {
        "editor.formatOnSave": true,
        "python.formatting.provider": "yapf",
        "python.formatting.yapfArgs": [
            "--style={based_on_style:pep8,column_limit:120}"
        ],
        "python.linting.flake8Enabled": true,
        "python.linting.flake8Args": [
            "--ignore=E501,E302,E305"
        ],
        "python.linting.enabled": true,
        "git.autofetch": true,
        "editor.minimap.enabled": false,
        "breadcrumbs.enabled": false,
        "launch": {
            "configurations": [
                {
                    "name": "Python: Module",
                    "type": "python",
                    "request": "launch",
                    "module": "${command:extension.commandvariable.file.relativeFileDotsNoExtension}",
                    "cwd": "${workspaceFolder}"
                }
            ],
        }
    },
    "extensions": [
        "ms-python.python",
        "rioj7.command-variable"
    ]
}